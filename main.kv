#:kivy 2.0.0

<MyScreenManager>:
    SearchScreen:
        name: 'SearchScreen'
    ResultScreen:
        name: 'ResultScreen'

<SearchScreen>:
    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height
        TextInput:
            hint_text: 'Search...'
            multiline: False
            size_hint: None, None
            size: 950, 50
        Button:
            text: 'Search'
            on_press: app.root.current_screen.navigate_to_second_screen()
            size_hint: None, None
            size: 200, 45
            pos_hint: {'x': 0.0, 'y': 2.0}
            background_color: 0.4, 0.4, 1, 1

<ResultScreen>:
    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height
        Button:
            text: 'Back'
            on_press: app.root.current_screen.navigate_to_first_screen()
            size_hint: None, None
            size: 200, 45